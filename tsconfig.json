{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "jsx": "react",
    "strict": true,
    "pretty": true,
    
    "noImplicitAny": false,
    "alwaysStrict": true,
    "noImplicitReturns": false,
    "noImplicitThis": false,
    
    "moduleResolution": "node",

    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "sourceMap": true,
    "skipLibCheck": true,

    "lib": [
      "es2017"
    ],

    "baseUrl": ".",
    "paths": {
      "@server/*": [
        "server/*"
      ],
      "@pages/*": [
        "pages/*"
      ],
      "@components/*": [
        "components/*"
      ]
    },

    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "server/**/*",
    "pages/**/*",
    "components/**/*"    
  ],
  "exclude": [
    "node_modules"
  ]
}